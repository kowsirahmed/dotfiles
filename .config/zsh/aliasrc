# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	md="mkdir -pv" \
	ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
alias \
	ls="ls -hX --color=auto --group-directories-first" \
	grep='grep --color=auto' \
	egrep='egrep --color=auto' \
	fgrep='fgrep --color=auto' \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
	ll="ls -lA" \
	lh="ls -ldA .*"

# These common commands are just too long! Abbreviate them.
alias \
	ka="killall" \
	g="git" \
	f="$FILE" \
	e="nvim" \
	v="nvim" \
	sv="sudo nvim" \
	z="zathura" \
	pacfd="paru -Ss" \
	pacin="paru -S" \
	pacrem="paru -Rns" \
	plz="sudo -i su" \

# moving to parent directories
alias \
	1='cd -' \
	..='cd ..' \
	...='cd ../../../' \

# Change directory
alias \
  gc="cd ~/.config/" \
  gb="cd ~/.local/bin" \
  gk="cd ~/.local/share/kawsar/" \
  gwp="cd ~/.local/share/kawsar/plugin" \
  gwt="cd ~/.local/share/kawsar/themes" \
  ggc="cd ~/.cache/dotfiles/.config" \
  gglb="cd ~/.cache/dotfiles/.local/bin" \
  gglk="cd ~/.cache/dotfiles/.local/share/kawsar" \

# Random
  alias wget="wget --hsts-file $XDG_CONFIG_HOME/wget/wget-hsts"
